<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="horizontal"
    android:weightSum="4">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diablo"
        android:id="@+id/diablo_button"
        android:layout_weight="1"
        android:tag="http://95.111.103.224:8080/static/diablo_vs_imperius.mp4"
        android:onClick="startDownloadFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obicham"
        android:id="@+id/obicham_button"
        android:layout_weight="1"
        android:tag="http://95.111.103.224:8080/static/obicham.mp3"
        android:onClick="startDownloadFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking"
        android:id="@+id/parking_button"
        android:layout_weight="1"
        android:tag="http://95.111.103.224:8080/static/parking_genius.mp4"
        android:onClick="startDownloadFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/penny"
        android:id="@+id/penny_button"
        android:layout_weight="1"
        android:tag="http://95.111.103.224:8080/static/penny.mp4"
        android:onClick="startDownloadFile"/>
</LinearLayout>
